/* pages/my/my.wxss */
.mycontainer {
  background: #f5f5f5;
}

.header {
  background: #1677ff;
  width: 100%;
  padding: 1em;
  box-sizing: border-box;
}
.my {
  color: white;
}
.userinfo {
  margin: 1em 0em;
}
.img {
  height: 100rpx;
  width: 100rpx;
  border: 4rpx solid #599eff;
  border-radius: 25rpx;
  float: left;
  display: inline-block;
}
.username {
  color: white;
  font-size: 40rpx;
  display: block;
}
.phonenum {
  color: #67a6ff;
  display: block;
}
.body {
  padding-bottom: 200rpx;
}

.content-box {
  margin: 20rpx 20rpx 0 20rpx;
  border-radius: 25rpx;
  background: white;
}

.content {
  height: 100rpx;
  border-bottom: 2rpx solid #f8f8f8;
  line-height: 100rpx;
  margin: 0 30rpx;
}

.content:active {
  opacity: 0.5;
}

.icon {
  width: 60rpx;
  height: 60rpx;
  float: left;
  margin: 20rpx 20rpx 20rpx 0;
}

.arrow{
  width: 10px;
  height: 10px;
  border-top: 2px solid #999;
  border-right: 2px solid #999;
  position: absolute;
  right: 20rpx;
  transform: rotate(45deg);
  margin-top:10rpx;
}  