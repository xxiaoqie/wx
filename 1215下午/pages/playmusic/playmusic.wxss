/* pages/playmusic/playmusic.wxss */
.name {
  background: #efefef;
  width: 1.5em;
  height: 1.5em;
  float: left;
  line-height: 1.5em;
  font-size: 1.5em;
  margin-right: 6rpx;
  border-radius: 10rpx;
  margin-top: 50rpx;
}

/* 16个小格口 */
.content {
  border: 1px solid #aaa;
  margin-top: 50rpx;
  padding: 50rpx;
  flex-direction: row;
}

/* 排列下面的方块 */
.btn {
  background: #efefef;
  width: 150rpx;
  height: 3em;
  line-height: 3em;
  font-size: 1.5em;
  float: left;
  margin-right: 1%;
  margin-bottom: 5rpx;
  text-align: center;
  border-radius: 10rpx;
}

.tip {
  height: 1.5em;
  line-height: 1.5em;
  padding: 14rpx;
  display: inline-block;
}
.sos {
  display: inline-block;
  background: green;
  color: #ffffff;
  margin: 0rpx 10rpx 10rpx 10rpx;
}
.sos:hover {
  background: beige;
}