  text-align: center;
  margin-left: 20rpx;
}
/* 每日收益 */
.everyday{
  width: 50%;
  text-align: center;
  color: darkgrey;
  padding: 30rpx;
  margin-right: 10rpx;
}
/* 按钮总控制 */
.control{
  height: 18%;
  width: 100%;
  display: flex;
  flex-direction: row;
}
/* 转出按钮 */
