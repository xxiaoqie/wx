/* pages/shoue/shoue.wxss */
/* 背景view */
.background{
  position: absolute;
  width: 100%;
  height: 20%;
  background-color: #FF4500;
  z-index: -2;
}
/* 总金额余额宝白框页面 */
.square{
  z-index: -1;
  background: #ffffff;
  margin-left: 5%;
  margin-top: 60rpx;
  width: 90%;
  height: 60%;
  display: flex;
  flex-direction: column;
  position: absolute; 
  border-radius: 20rpx;
}
/* 总金额与数字总和 */
.impmoney{
  width: 100%;
  height: 40%;
  position: absolute;
  margin-top:60rpx;
  top: 0;

}
/* 总金额view */
.zje{
   font-size: small;
   margin-top: 20rpx;
   text-align: center;
}
/* 1632.5元 */
.money{
 font-size: xx-large;
 text-align: center;
 margin-top: 10rpx;
}
/* tip收益 */
.tip{
margin: 0 auto;
  margin-top: 20rpx;
  text-align: center;
  width: 50%;
  height: 18%;
  background: #F3F3F3;
  border-radius: 20rpx;
  line-height: 60rpx;
}
/* 累计收益与每日收益总view */
.all{
  display: flex;
  flex-direction: row;
  margin-top: 65%;
  height: 20%;
  width: 100%;
}
/* 累计收益 */
.intotal{  
  width: 50%;
  padding: 30rpx;
